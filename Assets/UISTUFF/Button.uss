.button:hover {
    scale: 3 3;
}

.button {
    position: relative;
    align-items: center;
    font-size: 25px;
    -unity-text-align: upper-center;
    align-self: auto;
    justify-content: flex-start;
    margin-top: 20px;
    margin-right: 20px;
    margin-bottom: 20px;
    margin-left: 20px;
    flex-grow: 1;
    padding-top: 0;
    padding-right: 0;
    padding-bottom: 0;
    padding-left: 0;
    width: 500px;
    scale: 0.5 0.5;
}
